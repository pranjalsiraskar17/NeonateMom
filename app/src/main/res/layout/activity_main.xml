<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity" android:background="@drawable/bc">
    <TextView
            android:background="@drawable/ll"
            android:layout_width="match_parent"
            android:text="Mother Registration"
            android:textSize="30dp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_height="45dp"
            android:id="@+id/textView13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:background="@drawable/back"
            android:layout_width="43dp"
            android:layout_height="37dp"
            android:id="@+id/textView16" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"/>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ScrollView01"
                android:layout_width="fill_parent"
                android:paddingTop="45dp"
                android:layout_height="fill_parent" tools:layout_editor_absoluteY="16dp"
                tools:layout_editor_absoluteX="0dp" tools:ignore="MissingConstraints">
        <RelativeLayout
                android:id="@+id/RelativeLayout01"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <LinearLayout
                    android:id="@+id/LinearLayout01"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:orientation="vertical" android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp">


                <EditText
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:inputType="textPersonName"
                        android:layout_gravity="center"
                        android:hint="Name"
                        android:padding="16dp"
                        android:ems="10"
                        android:id="@+id/name_edittext_register"
                        android:background="@drawable/rounded_edittext_register_login"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="18dp"
                        app:layout_constraintTop_toBottomOf="@+id/Register_as_physician_text_view"/>

                <EditText
                        android:layout_width="300dp"
                        android:layout_gravity="center"
                        android:layout_height="50dp"
                        android:inputType="phone"

                        android:ems="10"
                        android:padding="16dp"
                        android:id="@+id/mobile_edittext_register"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:background="@drawable/rounded_edittext_register_login" android:hint="Mobile"
                        android:layout_marginTop="18dp"
                        app:layout_constraintTop_toBottomOf="@+id/name_edittext_register"
                />


                <EditText
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:inputType="textEmailAddress"
                        android:ems="10"
                        android:padding="16dp"
                        android:layout_gravity="center"
                        android:id="@+id/email_edittext_register"
                        android:background="@drawable/rounded_edittext_register_login" android:hint="Email"
                        android:singleLine="true" android:selectAllOnFocus="false"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="18dp"
                        app:layout_constraintTop_toBottomOf="@+id/address_edittext_register"/>
                <EditText
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/password_edittext_register"
                        android:background="@drawable/rounded_edittext_register_login" android:hint="Password"
                        android:layout_marginTop="18dp"

                        app:layout_constraintTop_toBottomOf="@+id/email_edittext_register"
                        android:padding="16dp"
                        app:layout_constraintEnd_toEndOf="@+id/email_edittext_register"
                        app:layout_constraintStart_toStartOf="@+id/email_edittext_register"
                />


                <EditText
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:inputType="date"
                        android:layout_gravity="center"
                        android:ems="10"
                        android:padding="16dp"

                        android:id="@+id/address_edittext_register" android:layout_marginTop="18dp"
                        app:layout_constraintTop_toBottomOf="@+id/mobile_edittext_register"
                        android:layout_marginBottom="12dp"
                        app:layout_constraintBottom_toTopOf="@+id/email_edittext_register"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:hint="Admit Date"
                        android:background="@drawable/rounded_edittext_register_login"/>


                <EditText
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:inputType="textPersonName"
                        android:hint="Attending nurse"
                        android:padding="16dp"
                        android:ems="10"
                        android:layout_gravity="center"
                        android:id="@+id/attendingnurse"
                        android:background="@drawable/rounded_edittext_register_login"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@+id/Register_as_physician_text_view"/>


                <Button
                        android:text="Register"

                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/register_button_register"
                        android:background="@drawable/rounded_button"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        app:layout_constraintEnd_toEndOf="@+id/password_edittext_register"
                        app:layout_constraintStart_toStartOf="@+id/password_edittext_register"
                        android:layout_marginTop="18dp"
                        app:layout_constraintTop_toBottomOf="@+id/password_edittext_register"/>
                <TextView
                        android:text="Already have an account?"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:id="@+id/already_have_account_text_view" android:layout_marginTop="6dp"
                        app:layout_constraintTop_toBottomOf="@+id/register_button_register"
                        app:layout_constraintStart_toStartOf="@+id/register_button_register"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="@+id/register_button_register"/>


            </LinearLayout>
        </RelativeLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>